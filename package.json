{
  "name": "pixels-canvas",
  "version": "1.0.2",
  "description": "render pixels to a canvas element",
  "main": "index.js",
  "scripts": {
    "build": "browserify example.js -o bundle.js -g uglifyify",
    "deploy": "npm run build && npm run dist && npm run push",
    "dist": "mkdir -p dist && bash -c 'cp *.{js,html,css} dist'",
    "push": "gh-pages -d dist",
    "start": "budo example.js -d --serve bundle.js --live",
    "test": "browserify test | smokestack | tap-spec"
  },
  "browserify": {
    "transform": []
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/livejs/pixels-canvas"
  },
  "author": "ahdinosaur",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/livejs/pixels-canvas/issues"
  },
  "homepage": "https://github.com/livejs/pixels-canvas",
  "dependencies": {
    "generate-function": "^2.0.0",
    "pixel-to-css-color": "^1.0.0"
  },
  "devDependencies": {
    "browserify": "^10.0.0",
    "budo": "^4.0.0",
    "gh-pages": "^0.3.0",
    "pull-raf": "^1.0.1",
    "pull-stream": "^3.2.3",
    "rainbow-pixels": "^4.0.0",
    "smokestack": "^3.3.0",
    "tap-spec": "^4.0.2",
    "tape": "^4.0.0",
    "uglifyify": "^3.0.1",
    "watchify": "^3.1.0"
  }
}
